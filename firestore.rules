rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // User profile data (current code writes here)
    match /user_data/{uid} {
      allow read, create, update, delete: if isOwner(uid);
    }

    // Recommended normalized collections (for future refactors)
    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    // Farmer/crop data (some screens read from here today)
    match /Farmers/{uid} {
      allow read, write: if isOwner(uid);
    }
    match /farmers/{uid} {
      allow read, write: if isOwner(uid);
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}



